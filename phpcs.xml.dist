<?xml version="1.0"?>
<ruleset name="NadiaSimpleSecurityBundle">
    <description>The NadiaSimpleSecurityBundle coding standard.</description>

    <arg name="basepath" value="."/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>

    <!-- Include the whole PSR-1 standard -->
    <rule ref="PSR1"/>
    <!-- Include the whole PSR-12 standard -->
    <rule ref="PSR12"/>

    <file>src/</file>
</ruleset>
